@page
@model TennisBruck.Pages.Login

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tennis Login</title>
    <link rel="stylesheet" href="css/login.css">
</head>
<body>
<div class="login-container">
    <div class="login-box">
        <h2>Login</h2>
        <form method="post" asp-page-handler="Login">
            <div class="input-group">
                <input placeholder="Benutzername" id="username" type="text" name="username" required>
            </div>
            <div class="input-group">
                <input placeholder="Passwort" type="password" name="password" required>
            </div>
            <div id="errorMessage">@Model.ErrorText</div>
            <button type="submit">Login</button>
        </form>
        <div class="register-link">
            <!-- Register button placed outside the form with better spacing -->
            <p>
                <button type="button" class="register-button" onclick="location.href='@Url.Page(nameof(Registration))'">Registrieren</button>
            </p>
        </div>
    </div>
</div>
</body>
</html>