@page
@model TennisBruck.Pages.Settings

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Einstellungen</title>
    <link rel="stylesheet" href="css/settings.css">
</head>
<body>
<div class="settings-container">
    <h1>Einstellungen</h1>

    <form method="post" asp-page-handler="ChangeSettings" class="settings-form">
        <h2>Persönliche Daten</h2>
        <label for="Firstname">Vorname</label>
        <input id="Firstname" name="Firstname" value="@Model.Player.Firstname" required/>

        <label for="Lastname">Nachname</label>
        <input id="Lastname" name="Lastname" value="@Model.Player.Lastname" required/>

        <label for="EmailOrPhone">E-Mail oder Telefonnummer</label>
        <input id="EmailOrPhone" name="EmailOrPhone" value="@Model.Player.EmailOrPhone" required/>

        <label for="Username">Benutzername</label>
        <input id="Username" name="Username" value="@Model.Player.Username" required/>

        <button type="submit" class="btn">Speichern</button>
    </form>

    <form method="post" asp-page-handler="ChangePassword" class="password-form">
        <h2>Passwort ändern</h2>
        <label for="NewPassword">Neues Passwort</label>
        <input id="NewPassword" name="newPassword" type="password" required/>

        <label for="NewPasswordRepeat">Neues Passwort Wiederholen</label>
        <input id="NewPasswordRepeat" name="newPasswordRepeat" type="password" required/>

        <button type="submit" class="btn">Passwort ändern</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.InfoText))
    {
        <div class="info-text">@Model.InfoText</div>
    }
</div>
</body>
</html>