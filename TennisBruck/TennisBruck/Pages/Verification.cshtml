@page
@model TennisBruck.Pages.Verification

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tennis Login</title>
    <link rel="stylesheet" href="css/login.css">
</head>
<body>
<div class="login-container">
    <div class="login-box">
        <h2>Code Verifizierung</h2>

        <form method="post" asp-page-handler="Verify">
            <div class="input-group">
                <input type="text" id="emailOrPhone" name="emailOrPhone" placeholder="Email oder Telefonnummer" required>
                <input type="text" id="code" name="code" placeholder="Verifizierungs Code" required>
            </div>
            <button type="submit">Verify</button>
        </form>
        <div id="message">@Model.InfoText</div>
    </div>
</div>
</body>
</html>